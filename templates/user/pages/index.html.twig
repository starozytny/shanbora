{% extends 'user/layout/layout.html.twig' %}

{% block title %}{{ app.user.galleryTitle ? app.user.galleryTitle : "" }}{% endblock %}
{% set page_title %}{{ app.user.galleryTitle ? app.user.galleryTitle : "" }}{% endset %}

{% block main_content %}
    <style>
        .gallery-item {
            break-inside: avoid; /* Ã‰vite que les images se cassent sur plusieurs colonnes */
        }
    </style>
    <div class="w-full lg:px-8">
        <div class="flex flex-col justify-center items-center">
            <div class="text-yellow-500 font-semibold text-lg">{{ app.user.galleryDate ? app.user.galleryDate | date('d/m/Y') : "" }}</div>
            <h2 class="font-bold text-6xl">{{ app.user.galleryTitle ? app.user.galleryTitle : "" }}</h2>
        </div>

        <div class="mt-10 flex flex-col gap-8 min-h-[calc(100vh-100px-80px)]">
            <div id="gallery_index"></div>
        </div>
    </div>
{% endblock %}
