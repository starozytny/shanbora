<div class="mt-2 text-sm">
    <div class="font-medium">{{ boitier is defined ? boitier : "Sony A7 III" }}</div>
    <div class="text-gray-600 flex gap-4">
        {% if focal is defined %}
            <div>{{ focal }} mm</div>
        {% endif %}
        {% if apeture is defined %}
            <div>F{{ apeture }}</div>
        {% endif %}
        <div>{{ speed }}s</div>
        <div>ISO {{ iso }}</div>
    </div>
</div>
