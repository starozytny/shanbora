{% extends 'base_tailwind.html.twig' %}

{% block title %}{{ page_title }} | {{ page_prefix }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app_app') }}
{% endblock %}

{% block body %}
    {% include "layout/components/page-loader.html.twig" %}

    <div id="body-content" class="relative overflow-hidden">
        <nav class="relative z-20 {{ nav_class is defined ? nav_class : "bg-white" }}">
            <div class="mx-auto max-w-screen-2xl px-4 sm:px-6 lg:px-8">
                <div class="flex h-20 lg:h-40 items-center justify-between lg:items-end">
                    <div class="w-full flex items-center justify-between lg:flex-col lg:gap-6 lg:pb-4">
                        <a href="{{ path('app_homepage') }}" class="flex flex-col lg:justify-center lg:items-center leading-3">
                            <span class="block font-bold text-3xl">Shanbo</span>
                            <span class="block ft-special font-semibold">Photographe</span>
                        </a>
                        <div class="hidden lg:block">
                            <div class="flex items-baseline uppercase gap-4">
                                <a href="{{ path('app_homepage') }}" class="{{ app.request.get('_route') in ['app_homepage'] ? "underline text-black" : "text-gray-600 hover:text-gray-900 transition-colors" }} px-3 py-2 font-semibold">
                                    <span>Chanbora Chhun</span>
                                </a>
                                <a href="{{ path('app_gallery') }}" class="{{ app.request.get('_route') in ['app_gallery'] ? "underline text-black" : "text-gray-600 hover:text-gray-900 transition-colors" }} px-3 py-2 font-semibold">
                                    <span>Portfolio</span>
                                </a>
                                <a href="{{ path('app_adventures') }}" class="{{ app.request.get('_route') in [
                                    'app_adventures', 'app_adventures_orceyrette', 'app_adventures_gaube',
                                    'app_adventures_ayous', 'app_adventures_miroir', 'app_adventures_reunion',
                                    'app_adventures_semaphore', 'app_adventures_morgon'
                                ] ? "underline text-black" : "text-gray-600 hover:text-gray-900 transition-colors" }} px-3 py-2 font-semibold">
                                    <span>Aventures</span>
                                </a>
                                <a href="{{ path('app_contact') }}" class="{{ app.request.get('_route') in ['app_contact'] ? "underline text-black" : "text-gray-600 hover:text-gray-900 transition-colors" }} px-3 py-2 font-semibold">
                                    <span>Me contacter</span>
                                </a>
                                <a href="{{ path('app_login') }}" class="{{ app.request.get('_route') in ['app_login'] ? "underline text-black" : "text-gray-600 hover:text-gray-900 transition-colors" }} px-3 py-2 font-semibold">
                                    <span>Galerie privée</span>
                                </a>
                                <a href="{{ path('app_ppt') }}" class="{{ app.request.get('_route') in ['app_ppt', 'app_login_ppt'] ? "underline text-black" : "text-gray-600 hover:text-gray-900 transition-colors" }} px-3 py-2 font-semibold">
                                    <span>PPT</span>
                                </a>
                                <a href="https://www.instagram.com/shanbo_daltonien/" target="_blank" rel="external" class="text-gray-600 hover:text-gray-900 px-3 py-2 font-semibold">
                                    <span>Instagram</span>
                                </a>
                                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                    <a href="{{ path('app_logout') }}" class="text-gray-600 hover:text-gray-900 px-3 py-2 font-semibold hidden xl:inline">
                                        <span>Se déconnecter</span>
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="-mr-2 flex lg:hidden">
                        <button type="button" class="nav-mobile relative inline-flex items-center justify-center rounded-md p-2 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800"
                                id="nav-mobile-main-btn" aria-controls="mobile-menu" aria-expanded="false"
                        >
                            <span class="absolute -inset-0.5"></span>
                            <span class="sr-only">Open main menu</span>
                            <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
                            </svg>
                            <svg class="hidden h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                            </svg>
                        </button>

                        <div id="nav-content" class="relative -z-10 hidden" role="dialog" aria-modal="true">
                            <div class="nav-mobile fixed inset-0 overflow-hidden w-full h-full bg-gray-500 bg-opacity-75">
                                <div class="pointer-events-none fixed inset-y-0 left-0 flex max-w-full">
                                    <div class="pointer-events-auto relative w-screen max-w-md">
                                        <div class="absolute z-30 right-0 top-0 -ml-8 flex pr-4 pt-6 sm:-ml-10">
                                            <button type="button" class="relative rounded-md text-gray-600 hover:text-gray-900 focus:outline-none focus:ring-2 focus:ring-gray-900">
                                                <span class="absolute -inset-2.5"></span>
                                                <span class="sr-only">Close panel</span>
                                                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
                                                </svg>
                                            </button>
                                        </div>

                                        <div class="flex h-full flex-col overflow-y-scroll bg-white py-3.5 shadow-xl">
                                            <div class="px-4 sm:px-6">
                                                <a href="{{ path('app_homepage') }}" class="flex flex-col leading-3">
                                                    <span class="block font-bold text-3xl">Shanbo</span>
                                                    <span class="block ft-special font-semibold">Photographe</span>
                                                </a>
                                            </div>
                                            <div class="relative mt-6 flex-1 px-4 sm:px-6">
                                                <div class="flex flex-col gap-1">
                                                    <a href="{{ path('app_homepage') }}" class="{{ app.request.get('_route') in ['app_homepage'] ? "text-black" : "text-gray-600 hover:text-gray-900" }} py-2 font-semibold">
                                                        <span>Chanbora Chhun</span>
                                                    </a>
                                                    <a href="{{ path('app_gallery') }}" class="{{ app.request.get('_route') in ['app_gallery'] ? "text-black" : "text-gray-600 hover:text-gray-900" }} py-2 font-semibold">
                                                        <span>Portfolio</span>
                                                    </a>
                                                    <a href="{{ path('app_adventures') }}" class="{{ app.request.get('_route') in ['app_adventures'] ? "text-black" : "text-gray-600 hover:text-gray-900" }} py-2 font-semibold">
                                                        <span>Aventures</span>
                                                    </a>
                                                    <a href="{{ path('app_contact') }}" class="{{ app.request.get('_route') in ['app_login'] ? "text-black" : "text-gray-600 hover:text-gray-900" }} py-2 font-semibold">
                                                        <span>Me contacter</span>
                                                    </a>
                                                    <a href="{{ path('app_login') }}" class="{{ app.request.get('_route') in ['app_login'] ? "text-black" : "text-gray-600 hover:text-gray-900" }} py-2 font-semibold">
                                                        <span>Galerie privée</span>
                                                    </a>
                                                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                                        <a href="{{ path('app_logout') }}" class="text-gray-600 hover:text-gray-900 mt-4 py-2 font-semibold">
                                                            <span>Se déconnecter</span>
                                                        </a>
                                                    {% endif %}
                                                    <a href="https://www.instagram.com/shanbo_daltonien/" target="_blank"  rel="external" class="mt-10 text-gray-600 hover:text-gray-900 py-2 font-semibold">
                                                        <span>Instagram</span>
                                                    </a>
                                                    <a href="https://nompaw.fr" target="_blank" rel="external" class="text-gray-600 hover:text-gray-900 py-2 font-semibold">
                                                        <span>Nompaw</span>
                                                    </a>
                                                    <div class="mt-6 flex gap-4">
                                                        <a href="https://www.instagram.com/shanbo_daltonien/" target="_blank" rel="external" class="relative">
                                                            <span class="icon-instagram !text-lg"></span>
                                                            <span class="tooltip bg-gray-300 py-1 px-2 rounded absolute -top-7 right-0 text-xs hidden">Instagram</span>
                                                        </a>
                                                        <a href="https://unsplash.com/fr/@shanbora" target="_blank" rel="external" class="relative">
                                                            <span class="icon-network !text-lg"></span>
                                                            <span class="tooltip bg-gray-300 py-1 px-2 rounded absolute -top-7 right-0 text-xs hidden">Unsplash</span>
                                                        </a>
                                                        <a href="https://www.linkedin.com/in/chanbora-chhun-00a0a0112/" target="_blank" rel="external" class="relative">
                                                            <span class="icon-linkedin !text-lg"></span>
                                                            <span class="tooltip bg-gray-300 py-1 px-2 rounded absolute -top-7 right-0 text-xs hidden">LinkedIn</span>
                                                        </a>
                                                        <a href="https://github.com/starozytny" target="_blank" rel="external" class="relative">
                                                            <span class="icon-github !text-lg"></span>
                                                            <span class="tooltip bg-gray-300 py-1 px-2 rounded absolute -top-7 right-0 text-xs hidden">GitHub</span>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        <main class="relative z-10 {{ main_class is defined ? main_class : "mx-auto max-w-screen-2xl sm:min-h-[calc(100vh-100px-80px)] lg:min-h-[calc(100vh-100px-160px)] p-4 lg:p-8" }}">
            {% block main_content %}{% endblock %}
        </main>

        <div class="relative z-10">
            {% block footer %}{% endblock %}
        </div>
    </div>

    <div class="to-top fixed z-20 bottom-4 right-4 lg:bottom-8 lg:right-8 cursor-pointer w-12 h-12 bg-blue-300/80 shadow flex justify-center items-center rounded-full hover:-translate-y-1.5 transition-transform">
        <span class="icon-up-chevron !text-lg text-white"></span>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app_app') }}
{% endblock %}
